<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation.xml"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.sarawan.framework.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.sarawan.framework.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.sarawan.framework.ui.info.InfoFragment"
        android:label="fragment_info" />
    <fragment
        android:id="@+id/basketFragment"
        android:name="com.example.sarawan.framework.ui.basket.BasketFragment"
        android:label="fragment_basket"
        tools:layout="@layout/fragment_basket" />
    <fragment
        android:id="@+id/catalogFragment"
        android:name="com.example.sarawan.framework.ui.catalog.CatalogFragment"
        android:label="fragment_catalog"
        tools:layout="@layout/fragment_catalog">
        <action
            android:id="@+id/action_catalogFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/infoHowFragment"
        android:name="com.example.sarawan.framework.ui.info.InfoHowFragment"
        android:label="fragment_info_how" />

    <fragment
        android:id="@+id/infoAboutFragment"
        android:name="com.example.sarawan.framework.ui.info.InfoAboutFragment"
        android:label="fragment_info_about" />

    <fragment
        android:id="@+id/infoSupportFragment"
        android:name="com.example.sarawan.framework.ui.info.InfoSupportFragment"
        android:label="fragment_info_how" />

    <fragment
        android:id="@+id/profileNameFragment"
        android:name="com.example.sarawan.framework.ui.profile.ProfileNameFragment"
        android:label="fragment_profile_name"
        tools:layout="@layout/fragment_profile_name" />
    <fragment
        android:id="@+id/profileAddressFragment"
        android:name="com.example.sarawan.framework.ui.profile.ProfileAddressFragment"
        android:label="fragment_profile_address"
        tools:layout="@layout/fragment_profile_address" />
    <fragment
        android:id="@+id/profileAlertFragment"
        android:name="com.example.sarawan.framework.ui.profile.ProfileAlertFragment"
        android:label="fragment_profile_alert"
        tools:layout="@layout/fragment_profile_alert" />
</navigation>