<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sarawan" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/primary_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="materialTimePickerTheme">@style/ThemeOverlay.App.TimePicker</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">?colorOnPrimary</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:minHeight">34dp</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">?colorOnPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingStart">17dp</item>
        <item name="android:paddingEnd">17dp</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/primary_green</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:minHeight">34dp</item>
    </style>

    <style name="ThemeOverlay.App.TimePicker" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="chipStyle">@style/Widget.MaterialComponents.TimePicker.Display</item>
        <item name="materialClockStyle">@style/Widget.MaterialComponents.TimePicker.Clock</item>
        <item name="imageButtonStyle">@style/Widget.MaterialComponents.TimePicker.ImageButton</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.MaterialComponents.TimePicker.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MaterialComponents.TimePicker.Title</item>
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorOnPrimary">@color/primary_green</item>
        <item name="colorOnSurface">@color/primary_green_select</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="android:textColor">@color/primary_green_select</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primary_green_back</item>
        <item name="colorOnPrimary">@color/primary_green</item>
        <item name="materialCalendarHeaderTitle">@style/ThemeOverlay.App.DatePicker.HeaderTitle</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="materialCalendarHeaderCancelButton">@style/ThemeOverlay.App.DatePicker.CancelButton</item>
    </style>
    
    <style name="ThemeOverlay.App.DatePicker.HeaderTitle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textSize">@dimen/cost_order_20</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker.CancelButton" parent="Widget.MaterialComponents.MaterialCalendar.HeaderCancelButton">
        <item name="android:textSize">@dimen/cost_order_20</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="scrollbar_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track</item>
        <item name="android:scrollbarSize">8dp</item>
        <item name="android:scrollbarFadeDuration">800</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">500</item>
    </style>
</resources>